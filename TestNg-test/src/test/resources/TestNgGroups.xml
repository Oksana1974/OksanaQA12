<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="Suite1" verbose="1" >
<test name="GroupsTest">
    <groups>
        <run>
            <exclude name="broken"  />
            <include name="positive"  />
            <exclude name="negative"  />
        </run>
    </groups>

    <classes>
        <class name="TaggedMetodsTest">
            <methods>
                <exclude name="test1T" />
                <include name="test2T" />
                <exclude name="test3T" />
            </methods>
        </class>
        <class name="AMetodsTest">
            <methods>
                <exclude name="test1A" />
                <include name="test2A" />
                <exclude name="test3A" />
            </methods>
        </class>
        <class name="BMetodsTest">
            <methods>
                <exclude name="test1B" />
                <include name="test2B" />
                <exclude name="test3B" />
            </methods>
        </class>
    </classes>
</test>
</suite>